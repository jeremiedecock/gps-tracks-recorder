<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	          android:layout_height="fill_parent"
	          android:layout_width="fill_parent"
	          android:orientation="vertical"
	          android:id="@+id/linearLayout1" android:gravity="bottom">
	<TextView android:text="@string/location_initial_format" android:layout_height="wrap_content" android:id="@+id/location" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_marginTop="20dip" android:layout_marginBottom="60dip" android:textSize="20dip"></TextView>
	<TextView android:text="@string/timer_initial_format" android:id="@+id/timer" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_marginTop="20dip" android:layout_marginBottom="20dip" android:textSize="30dip"></TextView>
	<ToggleButton android:text="ToggleButton" android:layout_height="wrap_content" android:id="@+id/toggleButton" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_gravity="center_horizontal" android:layout_marginTop="20dip" android:textOn="@string/record_started" android:textOff="@string/record_stopped"></ToggleButton>
</LinearLayout>